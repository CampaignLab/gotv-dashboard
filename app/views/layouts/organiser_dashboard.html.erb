
<% content_for :layout_name, 'organiser_dashboard' %>

<% content_for :layout do %>
  <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
    <div class="navbar-menu has-background-primary">
      <div class="navbar-start">
        <a class="navbar-item has-text-white" href="<%= work_space_path(@work_space) %>">Dashboard</a>
        <a class="navbar-item has-text-white" href="<%= work_space_turnout_observations_path(@work_space) %>">Raw Turnout Data</a>
      </div>
    </div>
  </nav>

  <section class="section has-background-white-ter is-bold" style="border-bottom: 1px solid #ccc;">
    <div class="level container">
      <div>
        <h1 class="title"><%= @work_space.name %></h1>
        <p class="subtitle">
          <%= yield :subtitle %>
        </p>
      </div>
      <div class="level-right">
        <%= render 'shared/invite_btn' %>
      </div>
    </div>
  </section>

  <%= render 'shared/success_flash', message: notice %>

  <section class="section">
    <div class="container content extra-wide-dashboard">
      <%= yield :content %>
    </div>
  </section>
<% end %>

<%= render template: 'layouts/application' %>
