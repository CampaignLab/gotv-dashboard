
<% content_for :title do %>
  <%= @work_space.name %>
<% end %>

<% content_for :subtitle do %>
  Send ballot counts to help your committee room
<% end %>

<% content_for :content do %>
  <section class="section">
    <div class="container">
      <%= form_for @observation, url: {action: "create"} do |f| %>
        <%= f.hidden_field(:polling_station_id) %>

        <div class="field">
          <label class="label">What is the current ballot count there?</label>
          <div class="control">
            <%= f.number_field(
              :count,
              in: 1..2000,
              step: 1,
              required: true,
              class: "input is-large",
              autofocus: true,
              placeholder: 'Enter ballot count...'
            ) %>
          </div>
        </div>

        <div class="buttons">
          <%= f.submit "Send ballot count", class: 'button is-primary' %>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
